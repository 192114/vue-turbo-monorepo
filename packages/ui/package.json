{
  "name": "@shadow/ui",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "histoire dev",
    "prepublishOnly": "pnpm build",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "changeset:list": "changeset list",
    "changeset:check": "changeset status --since=main",
    "version:check": "changeset version --dry-run",
    "version:bump": "changeset version && pnpm build && git add -A",
    "postversion": "git push && git push --tags",
    "version-packages": "changeset version",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "changeset:clean": "rm -rf .changeset/*.md",
    "dev:version": "pnpm run changeset:add && pnpm run version:check"
  },
  "peerDependencies": {
    "vue": ">=3"
  },
  "dependencies": {
    "@vueuse/core": "^13.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@histoire/plugin-vue": "^0.17.6",
    "@shadow/config": "workspace:*",
    "@tailwindcss/vite": "^4.1.8",
    "@types/node": "^20.11.24",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.18",
    "histoire": "^0.17.6",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vue": "^3.5.16"
  }
}