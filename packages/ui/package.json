{
  "name": "@shadow/ui",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "pnpm build",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "changeset:list": "changeset list",
    "changeset:check": "changeset status --since=main",
    "version:check": "changeset version --dry-run",
    "version:bump": "changeset version && pnpm build && git add -A",
    "postversion": "git push && git push --tags",
    "version-packages": "changeset version",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "changeset:clean": "rm -rf .changeset/*.md",
    "dev:version": "pnpm run changeset:add && pnpm run version:check"
  },
  "peerDependencies": {
    "vue": ">=3"
  },
  "dependencies": {
    "@vueuse/core": "^13.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@shadow/config": "workspace:*",
    "@chromatic-com/storybook": "^4.0.0",
    "@storybook/addon-a11y": "^9.0.4",
    "@storybook/addon-docs": "^9.0.4",
    "@storybook/addon-onboarding": "^9.0.4",
    "@storybook/addon-vitest": "^9.0.4",
    "@storybook/vue3-vite": "^9.0.4",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/node": "^22.15.29",
    "@vitejs/plugin-vue": "^5.2.4",
    "postcss": "^8.4.35",
    "storybook": "^9.0.4",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.16"
  }
}
